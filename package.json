{
  "name": "react-redux-express-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Starter kit for those who wish to use Create React App + Redux + Express.",
  "main": "lib/index.js",
  "scripts": {
    "start": "react-scripts start",
    "dev": "heroku local -f Procfile.local",
    "prebuild": "babel server -d lib",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "precommit": "lint-staged"
  },
  "repository": "notrab/react-redux-express-starter",
  "keywords": [
    "javascript",
    "babel",
    "node",
    "express",
    "react",
    "es2015",
    "redux"
  ],
  "author": "Jamie Barton <hi_jamie@me.com> (http://twitter.com/notrab)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/notrab/react-redux-express-starter/issues"
  },
  "homepage": "https://github.com/notrab/react-redux-express-starter#readme",
  "dependencies": {
    "compression": "^1.7.0",
    "express": "^4.15.3",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "morgan": "^1.8.2",
    "prettier": "^1.5.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "nodemon": "^1.11.0"
  },
  "proxy": "http://localhost:5100",
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --tab-width 2 --jsx-bracket-same-line --print-width 80 --write",
      "git add"
    ],
    "*.css": [
      "prettier --tab-width 2 --write",
      "git add"
    ]
  }
}
